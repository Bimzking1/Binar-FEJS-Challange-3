<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head-links') %>

	<!-- CSS File -->
	<link href="/css/add-cars.css" rel="stylesheet">
</head>

<body>

	<!-- Header -->
	<header id="header" class="header fixed-top d-flex align-items-center">
		<%- include('../partials/main-header') %>
	</header>

	<!-- Sidebar -->
	<div id="sidebar" class="sidebar">
		<%- include('../partials/sidebar', { 
			thisLayout: 'CARS', thisContent: 'List Car' 
		}) %>
	</div>

	<main id="main" class="main">
		<div class="pagetitle">
			<nav>
				<ol class="breadcrumb" style="--bs-breadcrumb-divider: '>';">
				<li class="breadcrumb-item"><a href="index.html">Car</a></li>
				<li class="breadcrumb-item"><a href="index.html">List Car</a></li>
				<li class="breadcrumb-item active">Add New Car</li>
				</ol>
			</nav>
			<div class="title-and-button">
				<div>
					<h1>Add New Car</h1>
				</div>
			</div>
			<div>
				<form>
					<div class="form-input-data">
						<div class="form-group row">
							<label for="inputPassword" class="col-sm-2 col-form-label required">Nama</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputPassword" placeholder="Placeholder">
							</div>
						</div>
						<div class="form-group row">
							<label for="inputPassword" class="col-sm-2 col-form-label required">Harga</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputPassword" placeholder="Placeholder">
							</div>
						</div>
						<div class="form-group row">
							<label for="inputPassword" class="col-sm-2 col-form-label required">Foto</label>
							<div class="col-sm-10">
								<input class="form-control" type="file" id="formFile" placeholder="test">
								<label for="formFile" class="form-label label-size">File size max. 2MB</label>
							</div>
						</div>
						<div class="form-group row">
							<label for="inputPassword" class="col-sm-2 col-form-label required">Start Rent</label>
							<div class="col-sm-10">
								<input type="date" class="form-control" id="inputPassword" placeholder="Placeholder">
							</div>
						</div>
						<div class="form-group row">
							<label for="inputPassword" class="col-sm-2 col-form-label required">Finish Rent</label>
							<div class="col-sm-10">
								<input type="date" class="form-control" id="inputPassword" placeholder="Placeholder">
							</div>
						</div>
						<div class="form-group row">
							<label for="staticEmail" class="col-sm-2 col-form-label">Created at</label>
							<div class="col-sm-10">
								<input type="text" readonly class="form-control-plaintext" id="staticEmail" value="-">
							</div>
						</div>
						<div class="form-group row">
							<label for="staticEmail" class="col-sm-2 col-form-label">Uploaded at</label>
							<div class="col-sm-10">
								<input type="text" readonly class="form-control-plaintext" id="staticEmail" value="-">
							</div>
						</div>
					</div>
					<div class="form-button-add">
						<button type="submit" class="btn form-button-cancel">Cancel</button>
						<button type="submit" class="btn form-button-save">Save</button>
					</div>
				</form>
			</div>
		</div>
	</main>

	<!-- Untuk offcanvas -->
	<script src="/js/main.js"></script>

</body>
</html>